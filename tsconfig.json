{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["pages/api/*"],
      "@lib/*": ["lib/*"],
      "@components/*": ["components/*"],
      "@models/*": ["models/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_middleware.js"],
  "exclude": ["node_modules"]
}
